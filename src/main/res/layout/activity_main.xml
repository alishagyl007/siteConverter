<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrd_img"
    tools:context="com.example.abc.sitemeter.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/in_out_layouts"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        >

        <LinearLayout
            android:id="@+id/input_layout"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Input"
                android:layout_margin="5dp"
                android:textSize="30dp"
                android:textColor="@color/main"
                android:textStyle="bold"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
            <RelativeLayout
                android:id="@+id/rel_lay_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/spinnerbg">

                <ImageView
                    android:id="@+id/state1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/ic_state"
                    android:layout_centerVertical="true"/>
                <Spinner
                    android:id="@+id/in_spinner_state"
                    android:layout_toRightOf="@+id/state1"
                    android:layout_centerVertical="true"
                    android:popupBackground="#abc4d9"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"

                    />
                <ImageView
                    android:id="@+id/arrow_down1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@id/in_spinner_state"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_arrow_drop_down_white_24dp"/>
            </RelativeLayout>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@id/rel_lay_1"
                android:src="@mipmap/ic_info" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
            <RelativeLayout
                android:id="@+id/rel_lay2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/spinnerbg">

                <ImageView
                    android:id="@+id/region1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/ic_map_marker"
                    android:layout_centerVertical="true"/>
                <Spinner
                    android:id="@+id/in_spinner_region"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/region1"
                    android:background="@android:color/transparent"
                    android:layout_centerVertical="true"
                    android:popupBackground="#abc4d9"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    />
                <ImageView
                    android:id="@+id/arrow_down2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@id/in_spinner_region"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_arrow_drop_down_white_24dp"/>
            </RelativeLayout>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@id/rel_lay2"
                android:src="@mipmap/ic_info"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/spinnerbg">
            <Spinner
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:popupBackground="#abc4d9"
                android:id="@+id/in_spinner_unit"
                android:background="@android:color/transparent"
                android:layout_centerVertical="true"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@id/in_spinner_unit"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_arrow_drop_down_white_24dp"/>
            </RelativeLayout>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:hint="Enter Value"
                android:textColorHint="@color/main"
                android:textSize="19dp"
                android:textAlignment="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:layout_margin="5dp"
                android:inputType="number|numberDecimal"
                />
        </LinearLayout>
        <LinearLayout
        android:id="@+id/output_layout"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/input_layout"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Output"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:textColor="@color/main"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/spinnerbg">

                <ImageView
                    android:id="@+id/state2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/ic_state"
                    android:layout_centerVertical="true"/>
                <Spinner
                    android:id="@+id/out_spinner_state"
                    android:layout_width="60dp"
                    android:popupBackground="#abc4d9"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/state2"
                    android:background="@android:color/transparent"
                    android:layout_centerVertical="true"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@id/out_spinner_state"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_arrow_drop_down_white_24dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/spinnerbg">

                <ImageView
                    android:id="@+id/region2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/ic_map_marker"
                    android:layout_centerVertical="true"/>
                <Spinner
                    android:id="@+id/out_spinner_region"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_toRightOf="@id/region2"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:popupBackground="#abc4d9"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@id/out_spinner_region"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_arrow_drop_down_white_24dp"/>
            </RelativeLayout>
        <CheckBox
            android:id="@+id/chkbox_view_as_set"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:hint="View as Set"
            android:textColorHint="@color/main"
            android:textSize="19dp"
            android:textAlignment="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnConvert"
        android:background="@drawable/btn_bg"
        android:text="Convert"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:layout_below="@+id/in_out_layouts"
        android:textSize="25dp"
        />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/btnConvert"
    >
    <TextView
        android:id="@+id/txtResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textSize="15pt"
        android:textStyle="bold"
        android:textColor="@color/main"/>
    <ImageView
        android:id="@+id/t_line"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/t_line_white"
        android:layout_below="@+id/txtResult"/>
<RelativeLayout
    android:id="@+id/list"
    android:paddingTop="5dp"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/t_line">
    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/main"
        android:textSize="19dp"
        />

    <ImageView
        android:layout_marginLeft="5dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/txtName"
        android:src="@mipmap/ic_info"
        />

    <TextView
        android:id="@+id/txtValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Value"
        android:textColor="@color/main"
        android:textSize="19dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="2dp"
        />

</RelativeLayout>
</RelativeLayout>
</RelativeLayout>
